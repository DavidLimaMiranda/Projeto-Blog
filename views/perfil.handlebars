<div>
    <span class="titulo">Perfil</span>

    <form action="/deslogar" method="post">
    
        <button type="submit" class="opcoes">Deslogar</button>
        
    </form>
    <form action="/ExcluirConta" method="post">

        <button type="submit" class="opcoes">Excluir conta</button>

    </form>
</div>
<div>
    <h1 class="contagem_publicacoes">Publicações</h1>

    <h1 class="contagem_publicacoes">{{publicacoes}}</h1>

    <h1><img src="/uploads/{{foto}}" class="foto"/></h1>

    <h1 class="nome">{{usuario}} </h1>

    <form action="/EditarDescricao" method="post">

    <h1 class="descricao"><textarea class="conteudo" name="nova_descricao" id="" cols="40" rows="4">{{descricao}}</textarea>
    <button class="editar" type="submit">Editar Descrição</button></h1>
    
    </form>
</div>
<div class="postagens">
    <br>
    <div>
        <h1 class="titulo">Suas Publicações</h1>
    </div>
    <p>
        {{#each post}}
        <br>
        <p><img class="publicacoes" src="/uploads/{{imagem}}" alt="Postagem não encontrada"/></p>
        
        <p class="postDescricao">{{descricao}}</p>
        
        <p><a href="/perfil/{{id}}"><button type="submit" class="excluir">Excluir publicação</button></a>
        
        <a href="/perfil/EditarPostagem/{{id}}"><button type="submit" class="editar">Editar publicação</button></a></p></p>

        {{/each}}
        <br>
    </p>
</div>
