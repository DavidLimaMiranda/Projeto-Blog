<div>
    <p class="titulo">BEM VINDO AO FEED DE POSTAGEMS</p>

{{#each post}}
<div class="perfil-container">

    <p class="perfil">Perfil: <span class="name">{{names}}</span></p>

    <img src="/uploads/{{foto_perfil}}" class="foto_perfil"/>
    
</div>

<img src="/uploads/{{imagem}}" class="imagem_postagens"/>

<p class="descricao">{{descricao}}</p>

<p>Likes: {{likes}}</p>

    <form method="post" action="/feed/likes/{{id}}">

        <p class="like"><button type="submit" class="buttonlike" id="darLike">Like</button></p>

    </form>
    <br>
{{/each}}
</div>
<style>
        p {
            font-size: 30px;
            color:white;
        }
        button {
            line-height: 20px;
            border-radius: 14px;
            width: 150px;
            font-style: initial;
            font-size: 17px;
            background-color: rgb(255, 255, 255);
            color: rgb(0, 0, 0);
            cursor: pointer; 
        }
        .titulo {
            margin-left: 18%;
            margin-right: 18%;
            font-size: 40px;
            color: rgb(255, 255, 255);
        }
        .perfil-container {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
            padding-left: 34%;
        }
        .name {
            font-size: 40px;
            color: blueviolet;
            padding-right: 30px;
        }
        .perfil {
            font-family: 'OCR A Std', monospace;
            font-size: 30px;
        }
        .descricao {
            font-family: 'Trebuchet MS', sans-serif;
            margin-left: 18%;
            margin-right: 18%;
            padding-bottom: 20px;
            font-size: 30px;
        }
        .imagem_postagens {
            max-width: 500px;
            max-height: 500px;
            min-width: 200px;
            min-height: 200px;
            object-fit: cover;
            border: 3px solid black;
        }
        .foto_perfil {
            width: 150px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid rgb(66, 30, 134);
        }
        .buttonlike {
            background-color: rgb(0, 247, 255);
            color: rgb(0, 0, 0);
        }
</style>
