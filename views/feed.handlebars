<div>
<h1 class="titulo">BEM VINDO AO FEED DE POSTAGEMS</h1>

{{#each post}}

<p class="name">Perfil: {{names}}</p>

<img src="/uploads/{{foto_perfil}}" class="foto_perfil"/>

<p><img src="/uploads/{{imagem}}" class="imagem_postagens"/></p>

<p class="descricao">{{descricao}}</p>

<p>Likes: {{likes}}</p>

<form method="post" action="/feed/likes/{{id}}">

<p class="like"><button type="submit" class="buttonlike" id="darLike">Like</button></p>

</form>
<br>
{{/each}}
</div>
