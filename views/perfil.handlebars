        <b>---------------------------------------------------------------------------------------</b>
        {{#each post}}
        <p><img class="publicacoes" src="/uploads/{{imagem}}" alt="Postagem não encontrada"/></p>
        <p>{{descricao}}</p>
        <p><a href="/perfil/{{id}}"><button type="submit" class="excluir">Excluir publicação</button></a>
           <a href="/perfil/EditarPostagem/{{id}}"><button type="submit" class="editar">Editar publicação</button></a></p>
        <b>---------------------------------------------------------------------------------------</b>
        {{/each}}
    </p>
</div>
